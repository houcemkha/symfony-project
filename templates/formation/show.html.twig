{% extends 'base.html.twig' %}

{% block title %}Formation
{% endblock %}
{% block main %}
	{% block body %}
		<h1>Formation</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ formation.id }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ formation.titre }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ formation.description }}</td>
				</tr>
				<tr>
					<th>Affiche</th>
					<td><img src="{{asset('uploads/' ~ formation.affiche)}}" alt="Avatar Image" class="rounded-circle w-px-100"></td>
				</tr>
				<tr>
					<th>Video</th>
					<td>{{ formation.video }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_formation_index') }}">back to list</a>

		<a href="{{ path('app_formation_edit', {'id': formation.id}) }}">edit</a>

		{{ include('formation/_delete_form.html.twig') }}
	{% endblock %}
{% endblock %}

